<div id="albums-page-background" class="albums">
    <h1 class="albums-page-title">Albums by {{items.0.artists.0.name}}</h1>

    {{#each items}}
        <div class="album">
            <img src="{{images.[0].url}}" alt="">
            <h3>{{this.name}}</h3>
            <a href="/tracks/{{id}}">View tracks</a>
        </div>
    {{/each}}
    <div id="back-btn">
        <a href="/">Back to Search</a>
    </div>
</div>